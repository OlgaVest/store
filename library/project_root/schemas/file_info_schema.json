{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "path", "size", "created", "modified"],
    "properties": {
      "name": { "type": "string" },
      "path": { "type": "string" },
      "size": { "type": "integer", "minimum": 0 },
      "created": { "type": "string", "format": "date-time" },
      "modified": { "type": "string", "format": "date-time" }
    }
  }
}